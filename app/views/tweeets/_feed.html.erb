    <article class="media box">
        <figure class="media-left">
         <p class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
         </p>
        </figure>
        <div class="media-content">

        </div>
    </article>
</div>

<% @tweeets.each do |tweeet| %>
 <div class="column is-half">
  <div class="box">
    <article class="media">
        <div class="media-left">
         <figure class="image i%s-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
         </figure>
        </div>
        <div class="media-content">
            <div class="content">
             <strong>Nikita C</strong><br />
             <small>@webcrunch</small><br />
             <p><%= tweeet.tweeet %></p>
            </div>
            <nav class="level">
             <div class="level-left is-mobile">
              <%= link_to tweeet, class: "level-item" do %>
               <span class="icon"><svg class="fa fa-link" aria-hidden="true"></svg></span>
              <% end %>
              <%= link_to edit_tweeet_path(tweeet), class: "level-item" do %>
               <a class="level-item">
                <span class="icon is-small"><i class="fa fa-pencil" aria-hidden="true"></i></span>
               </a>
              <% end %>
              <%= link_to tweeet, method: :delete, data: {confirm: "Are you sure you want to delete this tweeet?"
              } do %>
               <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              <% end %>

             </div> 
            </nav>
        </div>   
    </article>
  </div>
 </div>
<% end %>