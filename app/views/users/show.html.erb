<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
    <%= @user.name%>
</p>
@<%= @user.usename%><br>
<% if @user.usename != current_user.usename %>
    <%= link_to 'follow', user_friendships_path(@user),method: :post, class: 'btn btn-danger' unless @friendship.present? %>
    <%= link_to 'unfollow', friendship_path(@friendship.id), method: :delete, class: 'btn btn-danger' if @friendship.present? %>
    <h2>Followers: <%= @user.followers.count %></h2>
    <h2>Following: <%= @user.following.count %></h2>
<% end %>